<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
  <body>
    <% if (user.username) { %>
      <h2>I have a user.username</h2>
      <script>
        var string = <%- JSON.stringify(user.username) %>;
        document.getElementById('string').innerHTML = string;
        console.log(string);
      </script>
    <% } %>
    <div id="string">
      <h1>Hello please</h1><h1 id="string"></h1>
    </div>
    <div class="jumbotron text-center">
      <h1>Welcome to room 2 <%= user.username %>!</h1>
    </div>
    <a href="/auth/main" class="btn btn-danger"><span class="fa fa-sign-out"></span> Leave</a>
    <ul id="messages"></ul>
    <form action="">
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
      var sender = user.local.username;
      console.log(user.local.username);
      var socket = io('/room2');
      $('form').submit(function(){
        socket.emit('chat message', $('#m').val());
        $('#m').val('');
        return false;
      });
      socket.on('chat message', function(msg){
        $('#messages').append($('<li>').text(sender+": "+msg));
      });
    </script>
  </body>
</html>
